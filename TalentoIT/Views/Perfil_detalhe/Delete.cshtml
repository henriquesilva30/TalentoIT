@model TalentoIT.Entities.perfil_detalhe

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tem a certeza que pretende apagar?</h3>
<div>
    <h4>Experiência Laboral</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Titulo:
        </dt>
        <dd class = "col-sm-10">
            Titulo:
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome_empresa)
        </dt>
        <dd class = "col-sm-10">
            Empresa:
        </dd>
        <dt class = "col-sm-2">
            Ano Inicio:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ano_inico)
        </dd>
        <dt class = "col-sm-2">
            Ano Fim:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ano_fim)
        </dd>
        <dt class = "col-sm-2">
            Perfil Talento: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_perfil_talentoNavigation.email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_perfil_detalhe" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar Atrás</a>
    </form>
</div>
