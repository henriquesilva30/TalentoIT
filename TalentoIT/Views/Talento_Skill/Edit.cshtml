@model TalentoIT.Entities.talento_skill

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Skill Talento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_talento_skill" />
            <div class="form-group">
                <label asp-for="id_skill" class="control-label">Skill:</label>
                <select asp-for="id_skill" class="form-control" asp-items="ViewBag.id_skill"></select>
                <span asp-validation-for="id_skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_perfil_talento" class="control-label">Perfil Talento:</label>
                <select asp-for="id_perfil_talento" class="form-control" asp-items="ViewBag.id_perfil_talento"></select>
                <span asp-validation-for="id_perfil_talento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

