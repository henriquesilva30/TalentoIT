@model TalentoIT.Entities.perfil_talento

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar Perfil Talento</h1>

<h3>Tem a certeza que pretende apagar este perfil?</h3>
<br>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome_talento)
        </dd>
        <dt class = "col-sm-2">
            País:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pais)
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt class = "col-sm-2">
            Preço/Hora:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.preco_hora)
        </dd>
        <dt class = "col-sm-2">
            Flag:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.flag)
        </dd>
        <dt class = "col-sm-2">
            Utilizador:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id_userNavigation.email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id_perfil_talento" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
    </form>
</div>

<div>
    <br>
    <a asp-action="Index">Voltar Atrás</a>
</div>
