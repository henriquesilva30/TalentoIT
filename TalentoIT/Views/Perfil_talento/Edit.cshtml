@model TalentoIT.Entities.perfil_talento

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Perfil Talento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_perfil_talento" />
            <div class="form-group">
                <label asp-for="nome_talento" class="control-label">Título:</label>
                <input asp-for="nome_talento" class="form-control" />
                <span asp-validation-for="nome_talento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="pais" class="control-label">País:</label>
                <input asp-for="pais" class="form-control" />
                <span asp-validation-for="pais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label">Email:</label>
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="preco_hora" class="control-label">Preço/Hora:</label>
                <input asp-for="preco_hora" class="form-control" />
                <span asp-validation-for="preco_hora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="flag" class="control-label">Flag:</label>
                <input asp-for="flag" class="form-control" />
                <span asp-validation-for="flag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_user" class="control-label">Utilizador:</label>
                <select asp-for="id_user" class="form-control" asp-items="ViewBag.id_user"></select>
                <span asp-validation-for="id_user" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar Atrás</a>
</div>

