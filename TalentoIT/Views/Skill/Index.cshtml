@model IEnumerable<TalentoIT.Entities.skill>

@{
    ViewData["Title"] = "Index";
}

<h1>Skills</h1>

<p>
    <a asp-action="Create">Criar Nova Skill</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Area
            </th>
            <th>
                Skill
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_skill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.area)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_skill">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id_skill">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id_skill">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
